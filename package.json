{
  "name": "usb-enum",
  "version": "0.0.1",
  "description": "Native node library to list USB devices and notify on connect and disconnect",
  "main": "index.js",
  "repository": "git@github.com:meatysolutions/usb-enum.git",
  "license": "MIT",
  "keywords": [
    "usb",
    "detection",
    "enumeration",
    "devices"
  ],
  "types": "index.d.ts",
  "files": [
    "index.d.ts",
    "index.js"
  ],
  "napi": {
    "name": "usb-enum",
    "triples": {
      "defaults": true,
      "additional": [
        "i686-pc-windows-msvc",
        "aarch64-unknown-linux-gnu",
        "armv7-unknown-linux-gnueabihf",
        "aarch64-apple-darwin"
      ]
    }
  },
  "engines": {
    "node": ">= 10"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "format": "run-p format:md format:yaml format:source format:rs",
    "format:md": "prettier --parser markdown --write './**/*.md'",
    "format:rs": "cargo fmt",
    "format:source": "prettier --config ./package.json --write './**/*.{js,ts}'",
    "prepublishOnly": "napi prepublish -t npm",
    "version": "napi version"
  },
  "devDependencies": {
    "@napi-rs/cli": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  },
  "dependencies": {
    "@node-rs/helper": "^1.1.0"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always",
    "parser": "typescript"
  }
}